{
  "openapi": "3.0.0",
  "info": {
    "description": "This is the API documentation for ClearifyDetect application",
    "version": "1.0.0",
    "title": "ClearifyDetect API",
    "contact": {
      "email": "abc@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "schemes": ["http"],
  "host": "localhost:8080",
  "servers": "/",
  "tags": [
    {
      "name": "Text Predication"
    },
    {
      "name": "Explanation"
    }
  ],
  "paths": {
    "/predict": {
      "post": {
        "tags": ["Text Predication"],
        "summary": "Generate text prediction",
        "description": "Generates text prediction using a pretrained DistilBERT model.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Text content to generate prediction for",
            "required": true,
            "schema": {
              "$ref": "#/definitions/PredictionRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/PredictionResponse"
            }
          },
          "400": {
            "description": "Invalid request",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/explain": {
      "post": {
        "tags": ["Explanation"],
        "summary": "Explain text prediction",
        "description": "Provides explanation for text prediction using LIME.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Text content to explain prediction for",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ExplanationRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/ExplanationResponse"
            }
          },
          "400": {
            "description": "Invalid request",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "PredictionRequest": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "Text content for prediction"
        }
      }
    },
    "PredictionResponse": {
      "type": "object",
      "properties": {
        "prediction": {
          "type": "string",
          "description": "Predicted class (AI generated or Human generated)"
        },
        "ai_generated_percentage": {
          "type": "integer",
          "description": "Percentage indicating AI generated content"
        },
        "human_generated_percentage": {
          "type": "integer",
          "description": "Percentage indicating Human generated content"
        }
      }
    },
    "ExplanationRequest": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "Text content to explain prediction for"
        }
      }
    },
    "ExplanationResponse": {
      "type": "object",
      "properties": {
        "explanation_data": {
          "type": "object",
          "description": "Explanation data containing prediction information",
          "properties": {
            "class_names": {
              "type": "array",
              "description": "Class names",
              "items": {
                "type": "string"
              }
            },
            "predicted_probability": {
              "type": "array",
              "description": "Predicted probabilities for each class",
              "items": {
                "type": "number"
              }
            },
            "local_exp": {
              "type": "object",
              "description": "Local explanation for each class",
              "additionalProperties": {
                "type": "object"
              }
            },
            "intercept": {
              "type": "array",
              "description": "Intercept values for each class",
              "items": {
                "type": "number"
              }
            }
          }
        },
        "highlighted_text": {
          "type": "array",
          "description": "List of words with their highlighting color",
          "items": {
            "type": "object",
            "properties": {
              "word": {
                "type": "string",
                "description": "Word"
              },
              "color": {
                "type": "string",
                "description": "Highlight color (e.g., 'green' or 'red')"
              }
            }
          }
        }
      }
    },
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "statusCode": {
          "type": "integer",
          "description": "HTTP status code"
        },
        "message": {
          "type": "string",
          "description": "Error message"
        }
      }
    }
  }
}
